@model DevBridge.Templates.WebProject.Web.Logic.Models.Article.CreateArticleViewModel

@{
    ViewBag.Title = "Create new article";
}

<h2>Create a New article</h2>
<p>
    Use the form below to create a new article.
</p>
<p>
    Title and article body is requered.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Article creation was unsuccessful. Please correct the errors and try again.")
    <div>
        <fieldset>
            <legend>Article Information</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.Title)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Title)
                @Html.ValidationMessageFor(m => m.Title)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Text)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(m => m.Text)
                @Html.ValidationMessageFor(m => m.Text)
            </div>

            <p>
                <input type="submit" value="Create" />
            </p>
        </fieldset>
    </div>
}

